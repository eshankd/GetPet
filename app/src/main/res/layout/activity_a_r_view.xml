<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ARView">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/arFragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="48dp">

    </androidx.fragment.app.FragmentContainerView>

    <Button
        android:id="@+id/walkButton"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/arbuttondesign"
        android:fontFamily="@font/alike_angular"
        android:text="@string/walk"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/feedButton" />

    <View
        android:id="@+id/textView45"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#3498DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="46dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/postImage"
        app:layout_constraintEnd_toStartOf="@+id/textView47"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="152dp"
        android:fontFamily="@font/alike_angular"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="@+id/arFragment" />

    <Button
        android:id="@+id/GetPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"

        android:background="@drawable/arbuttondesign"
        android:fontFamily="@font/alike_angular"
        android:text="@string/getpet"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/feedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gobacktoprofile"
        android:layout_width="186dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/arbuttondesign"
        android:fontFamily="@font/alike_angular"
        android:text="@string/gobacktoprofile"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView45" />

    <Button
        android:id="@+id/feedButton"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/playButton"
        android:background="@drawable/arbuttondesign"
        android:fontFamily="@font/alike_angular"
        android:text="@string/feed"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playButton" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/walkButton"
        android:background="@drawable/arbuttondesign"
        android:fontFamily="@font/alike_angular"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>